{
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash(tts:*)",
      "Bash(./gradlew compileKotlin:*)",
      "Bash(./gradlew formatKotlin:*)",
      "Bash(mkdir:*)",
      "Bash(echo:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cc-notification"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cc-stop"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cc-pre-tool"
          }
        ]
      }
    ]
  }
}
